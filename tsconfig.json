{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "declaration": true
  },
  // "include": [
  //   "src/**/*.ts"
  // ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules",
    "lib",
    "test"
  ]
}